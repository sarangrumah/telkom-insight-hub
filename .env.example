# Example environment configuration (copy to .env and adjust values)
# Backend service configuration
PORT=4000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telekom_hub
DATABASE_SSL=false
CORS_ORIGIN=http://localhost:5173,http://localhost:8080,http://localhost:3000
DEBUG_SQL=true
# Allowlist hostnames for API Integration Testing (comma-separated, required for /api/integrations/test)
API_TEST_ALLOWED_HOSTS=httpbin.org,api.github.com
#JWT_SECRET=change_me_generate_secure_value

# Access token expiry (short-lived) and Refresh token/session settings
ACCESS_EXPIRES_IN=15m
REFRESH_EXPIRES_DAYS=30

# Frontend (Vite) configuration
VITE_API_BASE_URL=http://localhost:4000
# Mapbox public token (safe to expose in frontend)
VITE_MAPBOX_PUBLIC_TOKEN=pk.your_mapbox_public_token_here
